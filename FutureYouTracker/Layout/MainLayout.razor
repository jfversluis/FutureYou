@inherits LayoutComponentBase
@inject NavigationManager Navigation

@if (IsLandingPage)
{
    <!-- Landing page uses its own layout -->
    @Body
}
else
{
    <!-- Standard app layout for other pages -->
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://github.com/jfversluis/FutureYou" target="_blank">GitHub 🚀</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}

@code {
    private bool IsLandingPage => Navigation.Uri.EndsWith("/") || Navigation.Uri.EndsWith("/Home");
}
